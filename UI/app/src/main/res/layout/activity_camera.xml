<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CameraActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_menu" />

            <ImageView
                android:id="@+id/mCameraView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="cameraView"
                android:src="@drawable/img_camera" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/black_ops_one"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/yellow"
                android:textSize="40sp" />
        </RelativeLayout>

        <fragment
            android:id="@+id/Camera"
            android:name="com.example.pathfinder.Activities.Camera"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"></fragment>

        <com.example.pathfinder.Activities.ThumbstickView
            android:id="@+id/testThumbstick"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <fragment
            android:id="@+id/seekBar"
            android:name="com.example.pathfinder.Activities.Seekbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"></fragment>

        <fragment
            android:id="@+id/Driver_bar"
            android:name="com.example.pathfinder.Activities.Driver_bar"
            android:layout_width="match_parent"
            android:layout_height="80dp"></fragment>

        <fragment
            android:id="@+id/distanceLayout"
            android:name="com.example.pathfinder.Activities.SpeedDistance"
            android:layout_width="match_parent"
            android:layout_height="80dp"></fragment>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>